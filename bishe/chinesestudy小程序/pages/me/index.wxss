.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
}

.info-box {
  width: 80%;
  text-align: center;
}

.avatar-img {
  width: 100px;
  height: 100px;
  border: 1px solid gray;
  border-radius: 50%;
}

.score-box {
  margin-top: 20rpx;
  width: 80%;
  text-align: left;
  font-size: 16px;
  color: #333;
}

.history-box {
  margin-top: 20rpx;
  width: 80%;
  text-align: left;
  font-size: 14px;
  color: #666;
}

.history-list text {
  display: block;
  margin-top: 10rpx;
}

.logout-btn {
  margin-top: 20rpx;
  width: 80%;
  background-color: #9C6B30; /* 设置按钮背景颜色为红色，可按需调整 */
  color: white; /* 设置文字颜色为白色，可按需调整 */
  border: none; /* 去除边框 */
  border-radius: 5rpx; /* 设置按钮圆角 */
  padding: 10rpx 0; /* 设置上下内边距 */
}