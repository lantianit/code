.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

.login-section,
.register-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 80%;
}

input {
  margin-bottom: 20px;
  width: 100%;
  border: 1px solid #ccc;
  padding: 10px;
  border-radius: 5px;
}

button {
  width: 100%;
  background-color: #9C6B30;
  color: white;
  padding: 10px;
  border-radius: 5px;
}

.register-link,
.login-link {
  margin-top: 10px;
  color: #9C6B30;
  text-decoration: underline;
}

.avatar-container {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  overflow: hidden;
  margin-bottom: 20px;
  border: 1px solid #ccc;
}

.avatar {
  width: 100%;
  height: 100%;
}