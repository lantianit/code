/* pages/search/index.wxss */
.search-container {
  display: flex;
  align-items: center;
  margin: 20rpx;
  padding: 10rpx;
  background-color: #f5f5f5;
  border-radius: 10rpx;
}

.search-input {
  flex: 1;
  padding: 10rpx;
  border: none;
  border-radius: 5rpx;
  background-color: #fff;
  font-size: 16px;
  color: #333;
}

.search-button {
  margin-left: 10rpx;
  padding: 10rpx 20rpx;
  background-color: #9C6B30;
  color: white;
  border: none;
  border-radius: 5rpx;
  font-size: 16px;
  cursor: pointer;
  transition: background-color 0.3s;
}

.search-button:hover {
  background-color: #9C6B30;
}

.search-results {
  margin-top: 20rpx;
}

.result-item {
  padding: 10rpx;
  border-bottom: 1px solid #eee;
}

.video-title {
  font-size: 16px;
  color: #333;
}